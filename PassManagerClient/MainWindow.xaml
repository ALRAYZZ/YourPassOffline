<Window x:Class="PassManagerClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassManagerClient"
        mc:Ignorable="d"
        Title="YourPassOffline" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Enter Decryption Key:" VerticalAlignment="Center" Margin="0,0,10,0" />
            <TextBox Width="200" Text="{Binding Key, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Open Vault" Margin="0,0,10,0" Command="{Binding OpenVaultCommand}" />
        </StackPanel>

        <TextBlock Grid.Row="1" Text="Vaul will load here once key is provided" />
    </Grid>
</Window>
